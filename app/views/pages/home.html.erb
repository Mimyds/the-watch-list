
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1574267432553-4b4628081c31?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1631&q=80);">
  <div class="container">
    <div class="hero">
      <h1>Lorem ipsum dolor sit amet consectetur</h1>
      <h3>Listez vos films à l'infini</h3>
      <%= link_to "Créer une liste", new_list_path, class: "btn btn-flat" %>
    </div>
  </div>
</div>

<div class="container">
  <h2>Mes listes</h2>
  <div class="card-categories">
    <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="card text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.cover.key, height: 200, crop: :fill %>')">
        <%= list.title %>
      </div>
    <% end %>
    <% end  %>
  </div>
</div>
